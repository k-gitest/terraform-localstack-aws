{
  "name": "Terraform + LocalStack Dev",
  "image": "mcr.microsoft.com/devcontainers/universal:latest",
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest",
      "tflint": "0.56.0",
      "terragrunt": "latest"
    },
    "ghcr.io/localstack/devcontainer-feature/localstack-cli:0": {
      "version": "4.1.0",
      "awslocal": true,
      "tflocal": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform", // Terraform 用の VS Code 拡張機能
        "ms-vscode.vscode-typescript-next", // 必要であれば他の拡張機能も追加
        "hashicorp.hcl" // HCL 言語のサポートを強化
      ]
    }
  },
  "postCreateCommand": "./.devcontainer/setup.sh",
  "forwardPorts": [4510, 4511, 4512, 4513, 4514, 4515, 4516, 4517, 4518, 4519, 4520, 4521, 4522, 4523, 4524, 4525, 4526, 4527, 4528, 4529, 4530, 4531, 4532, 4533, 4534, 4535, 4536, 4537, 4538, 4539, 4540, 4541, 4542, 4543, 4544, 4545, 4546, 4547, 4548, 4549, 4550, 4551, 4552, 4553, 4554, 4555, 4556, 4557, 4558, 4559, 4566]
}